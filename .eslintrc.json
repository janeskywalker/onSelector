{

    "extends": "eslint:recommended",

    "rules": {
        "indent": [
            "error",
            4
        ],

        "linebreak-style": [
            "error",
            "unix"
        ],

        "quotes": [
            "error",
            "double"
        ],

        "semi": [
            "error",
            "always"
        ],

        "no-unused-vars": [
            "warn",
            { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ]
    },

    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },

    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    }
    
}